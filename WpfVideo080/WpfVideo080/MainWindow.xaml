<Window x:Class="WpfVideo080.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVideo080"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Margin="20" Width="100" Height="30" Text="{Binding Path=Nombre, Mode=TwoWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left"/>
        <TextBox Margin="20" Width="100" Height="30" Text="{Binding Path=Apellido, Mode=TwoWay}"></TextBox>
        <TextBox Margin="20" Width="100" Height="30" Text="{Binding Path=NombreCompleto, Mode=TwoWay}"></TextBox>
    </StackPanel>
</Window>
