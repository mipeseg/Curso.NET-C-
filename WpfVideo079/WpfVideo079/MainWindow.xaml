<Window x:Class="WpfVideo079.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVideo079"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox  Width="100" Name="miCuadro" Margin="100" Text="{Binding ElementName=miSlider,Path=Value,Mode=TwoWay}"></TextBox>
        <Slider Width="350" Name="miSlider" Minimum="0" Maximum="100"></Slider>
    </StackPanel>
</Window>
