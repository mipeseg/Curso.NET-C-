<Window x:Class="WpfVideo077.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVideo077"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Button Height="150" Width="300" Content="Dale" Background="AliceBlue">
            <Button.Style> <!-- Estilo del boton -->
                <Style TargetType="Button">
                    <!-- destino del estilo -->
                    <Style.Triggers>
                        <!-- Creamos el trigger o disparador. Al poner el mouse
                             sobre el boton se incrementa la fuente-->
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="FontSize" Value="25">
                                
                            </Setter>
                        </Trigger>
                    </Style.Triggers>


                </Style>
                
            </Button.Style>
        </Button>
    </Grid>
</Window>
